prefix		= @prefix@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@
LIBS    	= @LIBS@
INCLUDES 	= @INCLUDES@ -I. -I$(top_srcdir)/include 
CPPFLAGS  	= @CPPFLAGS@ -fPIC
SHELL		= /bin/sh

SRC     =  quaggapi.c syslog.c grub.c ethtool.c system.c interface.c 
OBJS    = $(SRC:.c=.o)
OSRLIB   = libosr.a

all:	$(OSRLIB)

.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) $(INCLUDES) -c $<

$(OSRLIB) : $(OBJS)
	$(AR) -r $@ $(OBJS) $(YACCOBJS)
	ranlib $(OSRLIB)

install:

clean:
	rm -f $(OBJS) $(OSRLIB) *.core 

distclean: clean



